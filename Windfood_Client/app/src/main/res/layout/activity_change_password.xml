<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="user"
            type="com.project.windfood_client.models.User" />

        <import type="android.view.View"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.auth.ChangeUserNameActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/fbutton_color_asbestos">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bordertable">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:layout_marginBottom="1dp"
                        android:padding="16dp"
                        android:background="@color/white"
                        android:text="Mật khẩu cũ"
                        android:textSize="16dp" />

                    <EditText
                        android:id="@+id/user_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:layout_marginTop="1dp"
                        android:layout_marginBottom="1dp"
                        android:padding="16dp"
                        android:background="@color/white"
                        android:ems="10"
                        android:text="@{user.password}"
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        android:hint="Nhập mật khẩu cũ"/>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bordertable">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:layout_marginBottom="1dp"
                        android:padding="16dp"
                        android:background="@color/white"
                        android:text="Mật khẩu mới"
                        android:textSize="16dp" />

                    <EditText
                        android:id="@+id/user_newpassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:layout_marginTop="1dp"
                        android:layout_marginBottom="1dp"
                        android:padding="16dp"
                        android:background="@color/white"
                        android:ems="10"
                        android:text="@{user.newpassword}"
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        android:hint="Nhập mật khẩu mới"/>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bordertable">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:layout_marginBottom="1dp"
                        android:padding="16dp"
                        android:background="@color/white"
                        android:text="Xác nhận mật khẩu"
                        android:textSize="16dp" />

                    <EditText
                        android:id="@+id/user_cfpassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:layout_marginTop="1dp"
                        android:layout_marginBottom="1dp"
                        android:padding="16dp"
                        android:background="@color/white"
                        android:ems="10"
                        android:text="@{user.cfpassword}"
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        android:hint="Nhập lại mật khẩu mới"/>

                </TableRow>
            </TableLayout>

            <Button
                android:id="@+id/btnSave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="LƯU"
                android:backgroundTint="@color/blue" />

            <Button
                android:id="@+id/btnBack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="QUAY LẠI"
                android:backgroundTint="@color/blue" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>